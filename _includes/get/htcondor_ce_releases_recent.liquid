{% include /get/htcondor_ce_releases.liquid %}

{% assign releases = htcondor_ce_releases %}
{% include get/major_release_number.liquid %}

{% assign htcondor_ce_releases_recent = "" | split : "" %}

{% for release in htcondor_ce_releases %}

    {% assign release_numbers = release.release_number | strip | split: "." %}
    {% assign first_number = release_numbers[0] |  times: 1 %}

    {% if first_number == major_release_number  %}
        {% assign htcondor_ce_releases_recent = htcondor_ce_releases_recent | push: release %}
    {% endif %}

{% endfor %}

{% assign htcondor_ce_releases_recent = htcondor_ce_releases_recent | sort: "sort_key" | reverse %}
