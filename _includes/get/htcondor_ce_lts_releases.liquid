{% include /get/releases.liquid %}
{% assign releases = releases | where: "release_type", "HTCondor-CE"%}

{% assign htcondor_ce_lts_releases = "" | split : "" %}

{% for release in releases %}

    {% assign release_numbers = release.release_number | strip | split: "." %}

    {% if release_numbers[1] == "0"  %}
        {% assign htcondor_ce_lts_releases = htcondor_ce_lts_releases | push: release %}
    {% endif %}

{% endfor %}

{% assign htcondor_ce_lts_releases = htcondor_ce_lts_releases | sort: "date" | reverse %}
