{% assign releases = site.news | where: "release_type", "HTCondor-CE"%}

{% assign htcondor_ce_lts_release = releases[0] %}

{% for release in releases %}

    {% assign release_numbers = release.release_number | strip | split: "." %}

    {% if release_numbers[1] == "0"  %}
        {% if release.release_number > htcondor_ce_lts_release.release_number %}
            {% assign htcondor_ce_lts_release = release %}
        {% endif %}
    {% endif %}

{% endfor %}