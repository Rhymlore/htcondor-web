{% include /get/releases.liquid %}
{% assign releases = releases | where: "release_type", "HTCondor"%}

{% assign htcondor_feature_release = releases[0] %}

{% for release in releases %}

    {% if release.release_number > htcondor_feature_release.release_number %}
        {% assign htcondor_feature_release = release %}
    {% endif %}

{% endfor %}