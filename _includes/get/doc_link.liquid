{% assign release = include.release | default: release %}

{% assign release_numbers = release.release_number | strip | split: "." %}
{% assign first_release_number = release_numbers[0] |  plus: 0 %}
{% assign second_release_number = release_numbers[1] |  plus: 0 %}
{% assign third_release_number = release_numbers[2] |  plus: 0 %}


{% if first_release_number == 9  %}
    {%  if second_release_number == 0 %}
        {% assign doc_link = "https://htcondor.readthedocs.io/en/v9_0/version-history/stable-release-series-90.html#version-9-0-" | append: third_release_number %}
    {% elsif second_release_number > 0 %}
        {% assign doc_link = "https://htcondor.readthedocs.io/en/v9_1/version-history/development-release-series-91.html#version-9-" | append: second_release_number | append: "-" | append: third_release_number %}
    {% endif %}
{% elsif first_release_number > 9 %}
    {%  if second_release_number == 0 %}
        {% assign doc_link = "https://htcondor.readthedocs.io/en/v" | append: first_release_number | append: ".0/version-history/lts-versions-" | append: first_release_number | append: "-0.html#version-" | append: first_release_number | append: "-0-" | append: third_release_number %}
    {% elsif second_release_number > 0 %}
        {% assign doc_link = "https://htcondor.readthedocs.io/en/v" | append: first_release_number | append: "_x/version-history/feature-versions-" | append: first_release_number | append: "-x.html#version-" | append: first_release_number | append: "-" | append: second_release_number | append: "-" | append: third_release_number %}
    {% endif %}
{% endif %}
