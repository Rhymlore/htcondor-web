{% include get/featured-users.liquid %}

{% if include.id != "" %}
    {% assign featured-users = featured-users | where: "id", include.id %}
    {% assign user_story = featured-users[0] %}
{% else %}
    {% if include.hero_image %}
        {% assign featured-users = featured-users | where_exp: "hero-image", "hero-image != nil" %}
    {% endif %}

    {% if include.index %}
        {% assign user_story = featured-users[include.index] %}
    {% else %}
        {% assign user_story = featured-users[0] %}
    {% endif %}
{% endif %}



